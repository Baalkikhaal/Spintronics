

#figure parameters
figure.facecolor : white
figure.figsize : 3.0, 3.0
figure.dpi : 100
figure.autolayout : False
figure.subplot.bottom : 0.20
figure.subplot.left : 0.25
figure.subplot.right : 0.95
figure.subplot.top : 0.90

#axes parameters
axes.facecolor : white
axes.labelweight : 900
axes.labelsize : 12.0
axes.linewidth : 1.0
axes.titlesize : 12.0
axes.titleweight : bold
axes.xmargin : 0.05
axes.ymargin : 0.05


#lines parameters
lines.linewidth : 1.5
lines.markersize : 4
lines.markerfacecolor : w

#ticks parameters
xtick.bottom : True
xtick.top : True
ytick.left : True
ytick.right : True

xtick.direction : in
ytick.direction : in

xtick.labelsize : 10.0
ytick.labelsize : 10.0


xtick.major.size : 4.5
ytick.major.size : 4.5

xtick.minor.visible : True
ytick.minor.visible : True

xtick.minor.size : 2.5
ytick.minor.size : 2.5

#######################legend parameters###################
legend.loc : best
legend.fontsize : 8
legend.framealpha : 0


## ***************************************************************************
## * ERRORBAR PLOTS                                                          *
## ***************************************************************************
errorbar.capsize: 4  # length of end cap on error bars in pixels


#######################save parameters#####################
savefig.dpi : 300.0

#######################image parameters####################
image.cmap : viridis # inferno # inferno , rocket'

#######################axes property cycler################

axes.prop_cycle: cycler('color', ['5790fc','f89c20', 'e42536', '964a8b', '9c9ca1', '7a21dd']) + cycler(marker = ['o', 's', 'v', '^', '<', '>'])


