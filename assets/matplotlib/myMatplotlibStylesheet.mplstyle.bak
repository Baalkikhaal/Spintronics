# text-font parameters
font.family : Arial
font.size : 8.0
font.weight : bold	

# math-font parameters
mathtext.fontset : cm
mathtext.default : regular

# LaTex configuration
text.usetex : False
text.latex.preamble: \usepackage{amsmath}\usepackage{amssymb} # amsmath package for the align enivironment, "amssymb" package for blackboard bold mathfont \mathbb







